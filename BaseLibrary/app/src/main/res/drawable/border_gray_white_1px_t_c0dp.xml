<?xml version="1.0" encoding="utf-8"?>
<!-- 灰色 顶部边框 1px 填充白色-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <item>  
        <shape>  
            <solid android:color="#ffffff" />  
            <stroke android:width="1px" android:color="#cccccc" />  
        </shape>  
    </item>  
    <item android:top="1px">  
        <shape>  
            <solid android:color="#ffffff" />   
        </shape>  
    </item>  
</layer-list>  
